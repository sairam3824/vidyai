# ─────────────────────────────────────────────────────────────────────────────
# Vidyai Backend — Development Environment
# Copy to .env and fill in real values.
# NEVER commit .env to version control.
# ─────────────────────────────────────────────────────────────────────────────

# ── App ───────────────────────────────────────────────────────────────────────
APP_NAME=Vidyai
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
API_V1_PREFIX=/api/v1

# ── Database ──────────────────────────────────────────────────────────────────
# Local development (Docker Compose)
DATABASE_URL=postgresql://vidyai:vidyai@localhost:5432/vidyai

# AWS RDS (production) — uncomment and replace
# DATABASE_URL=postgresql://vidyai:<PASSWORD>@<RDS_ENDPOINT>:5432/vidyai

# ── JWT ───────────────────────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_generate_a_strong_random_secret_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── OpenAI ────────────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-...
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o
EMBEDDING_DIMENSIONS=1536
RAG_TOP_K=6

# ── Storage ───────────────────────────────────────────────────────────────────
# "local" for development, "s3" for production
STORAGE_MODE=local
LOCAL_STORAGE_PATH=./storage

# AWS S3 (only required when STORAGE_MODE=s3)
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=ap-south-1
# S3_BUCKET_NAME=vidyai-textbooks

# ── Usage Limits ──────────────────────────────────────────────────────────────
FREE_TESTS_PER_WEEK=3
BASIC_TESTS_PER_WEEK=20
PREMIUM_TESTS_PER_WEEK=100

# ── Rate Limiting ─────────────────────────────────────────────────────────────
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW_SECONDS=3600

# ── CORS ──────────────────────────────────────────────────────────────────────
ALLOWED_ORIGINS=["http://localhost:3000"]
